# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Alchemy Configuration
# Get these from https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key_here
ALCHEMY_WEBHOOK_AUTH_TOKEN=your_alchemy_webhook_auth_token_here

# Blockchain Network Configuration
# BSC Mainnet (default)
BSC_RPC_URL=https://bsc-dataseed.binance.org/

# BSC Testnet (optional, for testing)
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# Ethereum Mainnet (optional, can use Ankr, Infura, or Alchemy)
ETHEREUM_RPC_URL=https://rpc.ankr.com/eth

# Transaction Explorer API Keys
# Get these from respective blockchain explorer websites
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BSCSCAN_API_KEY=your_bscscan_api_key_here

# Alternative RPC providers you can use:
# Ankr: https://rpc.ankr.com/bsc or https://rpc.ankr.com/eth
# Infura: https://mainnet.infura.io/v3/YOUR-PROJECT-ID
# Alchemy: https://eth-mainnet.alchemyapi.io/v2/YOUR-API-KEY

